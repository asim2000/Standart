@model LoginModel
@section header{
<partial name="_header"/>
}
<div class="login-page">
<div class="container d-flex align-items-center position-relative py-5">
<div class="card shadow-sm w-100 rounded overflow-hidden bg-none">
<div class="card-body p-0">
<div class="row gx-0 align-items-stretch">
<!-- Logo & Information Panel-->
<div class="col-lg-6">
<div class="info d-flex justify-content-center flex-column p-4 h-100">
    <div class="py-5">
    <h1 class="display-6 fw-bold">Dashboard</h1>
    <p class="fw-light mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
    </div>
</div>
</div>
<div class="col-lg-6 bg-white">
<div class="d-flex align-items-center px-4 px-lg-5 h-100">
<form class="login-form py-5 w-100" method="post" action="/account/login">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for=@Model.ReturnUrl />
<div class="input-material-group mb-3">
    <input class="input-material"  type="text" asp-for="@Model.Username"  autocomplete="off" required>
    <label class="label-material" asp-for="@Model.Username">User Name</label>
</div>
<span class="text-danger" asp-validation-for="@Model.Username"></span>

<div class="input-material-group mb-4">
    <input class="input-material" asp-for="@Model.Password" type="password" required>
    <label class="label-material" asp-for="@Model.Password">Password</label>
</div>
<span class="text-danger" asp-validation-for="@Model.Password"></span>

<button class="btn btn-primary mb-3" id="login" type="submit">Login</button>@*<br><a class="text-sm text-paleBlue">Forgot Password?</a><br>*@<small class="text-gray-500">Do not have an account? </small><a class="text-sm text-paleBlue" href="/account/register">Signup</a>
</form>
</div>
</div>
</div>
</div>
</div>
</div>
</div>

@section Script{
    
}